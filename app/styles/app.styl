@require "$colors.styl"

$header-height = 30px

body
  height 100%
  min-height calc(100vh - 20px)
  width 100%
  min-width 1024px
  color white
  background-color $main-bg
  background-image linear-gradient($main-bg-default, $main-bg)
  font-family Raleway
  margin 0
  header
    position sticky
    top 0
    display flex
    align-items center
    height 30px
    background-color black
    a,a:visited,a:hover,a:active
      color white
      text-decoration none
      margin-right 15px
      cursor pointer
    .top-left
      margin 0 15px
    .top-navigation
      margin 0 15px 0 auto
  footer
    bottom 0
  .main-content
    height 100%
    min-height calc(100% - 30px)
    .screen
      padding-top 35px
      a, a:visited, a:active
        color #db0000
        text-decoration none
      a:hover
        color white
        text-decoration underline
    .alt-screen
      color black
      background-color $alt-bg
      background-image linear-gradient($alt-bg-default, $alt-bg)
      a:hover
        color black

@require 'components/*'

