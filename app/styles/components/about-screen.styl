.about
  display grid
  grid-template-columns 1fr 1fr
  height 100%
  min-height 100vh
  >div
    margin 0 30px
    h2
      text-decoration underline
  .about-me
    grid-column-start 1
    grid-row-start span 2
  .about-site
    grid-column-start 2
    grid-row-start 1
    .validations
      a
        color black
      i
        color $lime
  .currently-consuming
    grid-column-start 2
