<h2>Contact Me</h2>
<form>
  <div class="name">
    <label>Name: </label>
    <span class="names">
      <input name="first-name" type="text"  placeholder="First Name"/>
      <input name="last-name" type="text" placeholder="Last Name" />
    </span>
  </div>
  <div class="email">
    <label>Email: </label>
    <input name="email" type="text" placeholder="Email Address"/> <!-- add validations -->
  </div>
  <div class="subject">
    <label>Subject: </label>
    <input name="subject" type="text" placeholder="Subject Line" />
  </div>
  <div class="message">
    <label>Message: </label>
    <textarea name="message">What would you like to say?</textarea>
  </div>
  <div class="submit btn green" {{action "submit"}}>Fire Away!</div>
</form>